<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        xmlns:android="http://schemas.android.com/apk/res/android" >


        <TextView
            android:id="@+id/text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:text="Remote token Connection Wizard"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"/>


        <EditText
            android:id="@+id/token1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="154dp"
            android:hint="Enter the Registered token1 Number"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:layout_alignStart="@+id/token1"
            android:layout_alignEnd="@+id/token1"
            android:layout_below="@id/token1"
            />






    </RelativeLayout>

</FrameLayout>